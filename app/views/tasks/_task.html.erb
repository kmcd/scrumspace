<% remote_form_for task, {}, :html => { :class => "task", :id => "task_#{task.id}" } do |f|%>
   <%= f.text_field :description %>
   will take 
   <%= f.text_field :owner %>
   <%= f.select :remaining, (0..10).to_a %>
   hours to finish for
   <%= f.select :demo, task_demos(@product) %>
   <span class='buttons'>
      <button>Save</button>
      <%= link_to_remote 'Delete', :url => task_path(task), :method => :delete %>
   </span>
<% end %>
